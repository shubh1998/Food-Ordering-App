<div class="container" style="margin-top:7%">
    <table class="table table-hover text-center" id="tbl">
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Unit-Price</th>
            <th>Quantity</th>
            <th>Total Price (in &#8377;)</th>
        </tr>
        {{#each data}}
        {{#each items}}
        <tr>
            <td><img src="/upload/{{this.Pimage}}" height="100px" width="100px"></td>
            <td>{{this.Pname}}</td>
            <td>{{this.Pprice}} </td>
            {{/each}}
            <td>{{this.pQuantity}}</td>
            <td></td>
        </tr>
        {{/each}}
    </table>
    <hr>
    <div class="row">
        <div class="col-lg-8">
            <h6 class="text-grand">Grand-Total</h6>
        </div>
        <div class="col-lg-4">
            <span id="Gtotal" class="grand-total"></span>&#8377;
        </div>
    </div>
</div>
<script>
    var table = document.getElementById("tbl");
    for (var r = 1; r < table.rows.length; r++) {
        var n1 = tbl.rows[r].cells[2].innerHTML;
        var n2 = tbl.rows[r].cells[3].innerHTML;
        var m = n1 * n2;
        tbl.rows[r].cells[4].innerHTML = m;
        m = 0;
    }
    sum = 0
    for (var r = 1; r < table.rows.length; r++) {
        var num1 = tbl.rows[r].cells[4].innerHTML;
        var sum = Number(sum) + Number(num1);
    }
    document.getElementById("Gtotal").innerHTML = sum;
</script>