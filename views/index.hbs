<h1 style="text-align: center">Our Dishes</h1><br>

<div class="container-fluid">

	<div class="row cardmargin">
		{{#each data}}
		<div class="col-lg-3" style="margin-top: 20px;">
			<div class="card shadow">
				<div class="inner">
					<img class="card-img-top" src="/upload/{{this.Pimage}}" alt="Card image cap" height="210px"
						width="350px">
				</div>
				<div class="card-body text-center">
					<h5 class="card-title">{{this.Pname}}</h5>
					<p class="card-text">{{this.Pdesc}}</p>
					<a href="detailInfo?id={{this._id}}" class="btn btn-success">Add-To-Cart</a><br><br>
					<a href="detailInfo?id={{this._id}}" class="btn btn-primary">Detail Info...</a>
				</div>
			</div>
		</div>
		{{/each}}
	</div>

</div>
